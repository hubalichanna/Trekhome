<% layout('/layouts/boilerplate') -%>
<div class="container my-4">
  <div class="row">
    
   <!-- Title -->
<div class="col-9 text-center mb-3">
  <h3 class="h4 fw-bold"><%= listing.title %></h3> <!-- h4 = normal size -->
</div>

<!-- Listing Card -->
<div class="col-12 col-lg-6 offset-lg-2">
  <div class="card mb-4 listing-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img img-fluid" alt="Listing_image" style="max-height: 400px; object-fit: cover;"> <!-- Normal image height -->

    <div class="card-body">
      <p class="card-text text-muted mb-2"><i>Owned By <%= listing.owner.username %></i></p>
      <p class="card-text" style="font-size: 1rem;"><%= listing.description %></p> <!-- Normal paragraph size -->
      <p class="card-text">&#8360; <%= listing.price.toLocaleString("en-PK") %></p>
      <p class="card-text"><%= listing.location %></p>
      <p class="card-text"><%= listing.country %></p>
    </div>
  </div>
</div>


    <!-- Edit/Delete Buttons -->
    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
    <div class="col-12 text-center mb-4">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark me-2">Edit</a>
      <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
    <% } %>

    <hr class="my-4">

    <!-- Review Form -->
    <% if (currUser) { %>
    <div class="col-12 col-lg-8 offset-lg-2 mb-4">
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
        <label for="rating" class="form-label">Rating</label>
        <div class="mb-3 mt-2">
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comments</div>
        </div>

        <button class="btn btn-outline-dark mb-3">Submit</button>
      </form>
    </div>
    <% } %>

    <!-- All Reviews -->
    <% if (listing.reviews.length > 0) { %>
    <div class="col-12 col-lg-8 offset-lg-2 mb-4">
      <h5><b>All Reviews</b></h5>
      <div class="row">
        <% for (let review of listing.reviews) { %>
        <div class="col-12 col-md-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title">@<%= review.author.username %></h5>
              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
              <p class="card-text"><%= review.comment %></p>
              <% if (currUser && review.author._id.equals(currUser._id)) { %>
              <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-dark btn-sm">Delete</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <% } %>

    <!-- Map Section -->
    <div class="col-12 col-lg-8 offset-lg-2 mb-5">
      <h4>Where You'll Be</h4>
      <div id="map" style="height: 300px;"></div>
    </div>

  </div>
</div>

<!-- Leaflet Map Script -->
<script>
  const coordinates = <%- JSON.stringify(listing.geometry.coordinates) %>;
  const map = L.map('map').setView([coordinates[1], coordinates[0]], 13);
  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '&copy; OpenStreetMap contributors'
  }).addTo(map);
  L.marker([coordinates[1], coordinates[0]])
    .addTo(map)
    .bindPopup('<%= listing.title %><br><%= listing.location %>')
    .openPopup();
</script>
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
