<% layout('/layouts/boilerplate') -%>

<style>
  body {
    background-color: #f7f7f7;
    font-family: "Helvetica Neue", sans-serif;
  }

  .form-container {
    background-color: #fff;
    border-radius: 20px;
    padding: 40px;
    margin-top: 50px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .form-label {
    font-weight: 600;
    margin-bottom: 6px;
  }

  .form-control {
    border-radius: 12px;
    padding: 12px 15px;
    border: 1px solid #ddd;
    transition: border 0.3s ease;
  }

  .form-control:focus {
    border-color: #ff385c;
    box-shadow: 0 0 0 0.2rem rgba(255, 56, 92, 0.25);
  }

  .btn-airbnb {
    background-color: #ff385c;
    color: #fff;
    border-radius: 12px;
    padding: 12px;
    font-weight: 600;
    border: none;
    transition: background 0.3s ease;
  }

  .btn-airbnb:hover {
    background-color: #e03150;
  }

  .form-header {
    font-size: 28px;
    font-weight: 700;
    color: #222;
    margin-bottom: 30px;
    text-align: center;
  }

  .form-icon {
    color: #ff385c;
    margin-right: 8px;
  }
</style>

<body>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-10 col-lg-8">
        <div class="form-container">
          <div class="form-header">üõèÔ∏è Create Your Listing</div>

          <form method="POST" action="/listings" enctype="multipart/form-data">
            <!-- Title -->
            <div class="mb-4">
              <label class="form-label"
                ><i class="fa fa-heading form-icon"></i>Title</label
              >
              <input
                type="text"
                name="listing[title]"
                class="form-control"
                placeholder="Cozy apartment in the heart of city"
                required
              />
            </div>

            <!-- Description -->
            <div class="mb-4">
              <label class="form-label"
                ><i class="fa fa-align-left form-icon"></i>Description</label
              >
              <textarea
                name="listing[description]"
                class="form-control"
                rows="4"
                placeholder="Describe your place..."
                required
              ></textarea>
            </div>

            <!-- Image Upload -->
            <div class="mb-4">
              <label class="form-label"
                ><i class="fa fa-image form-icon"></i>Upload Image</label
              >
              <input
                type="file"
                name="listing[image]"
                class="form-control"
                required
              />
            </div>

           <!-- Price Field -->
<div class="mb-4">
  <label for="price" class="form-label">Price</label>
  <input
    required
    name="listing[price]"
    type="number"
    placeholder="1200"
    class="form-control"
    id="price"
  />
  <div class="invalid-feedback">Please enter a valid price.</div>
</div>

<!-- Country Field -->
<div class="mb-4">
  <label for="country" class="form-label">Country</label>
  <input
    required
    type="text"
    name="listing[country]"
    placeholder="Pakistan"
    class="form-control"
    id="country"
  />
  <div class="invalid-feedback">Please enter a valid country.</div>
</div>



            <!-- Location -->
            <div class="mb-4">
              <label class="form-label"
                ><i class="fa fa-map-marker-alt form-icon"></i>Location</label
              >
              <input
                type="text"
                name="listing[location]"
                class="form-control"
                placeholder="Dadu, Sindh"
                required
              />
            </div>

            <!-- Submit Button -->
            <div class="d-grid">
              <button class="btn btn-airbnb" type="submit">Add Listing</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>

  <!-- Font Awesome CDN for Icons -->
  <script
    src="https://kit.fontawesome.com/a076d05399.js"
    crossorigin="anonymous"
  ></script>
</body>
